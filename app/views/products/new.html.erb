<div class="newListing">
  <h2>Add New Listing</h2>

  <%= form_with model: @new_product do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "category" %><br />
      <%= f.collection_select :category_id, @categories, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :price %>
      $<%= f.text_field :price %>
    </div>

    <div class="field">
      <%= f.label "Upload product image" %><br />
      <%= f.file_field :picture %><br/>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit "Create Listing" %>
    </div>
  <% end %>

</div>
