<div class="market seller">
  <h1><%= @seller.name %></h1>
  <% if user_signed_in? %>
      <p>Email: <%= @seller.email %></p>
      <p>Phone: <%= @seller.phone %></p>
  <% else %>
      <a href="<%= new_user_session_path() %>">
        <div class="button red"> Login to see contact details </div>
      </a>
  <% end %>

  <h2>Current Listings by <%= @seller.name %></h2>
  <%= render 'products' %>
</div>