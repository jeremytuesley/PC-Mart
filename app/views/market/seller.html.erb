<div class="market seller">
  <h1><%= @seller.name %></h1>
  <% if user_signed_in? %>
    <p>Email: <%= @seller.email %></p>
    <p>Phone: <%= @seller.phone %></p>
  <% else %>
    <%= button_to "Login to see contact details", method: :get, new_user_session_path(), class: "button red" %>
  <% end %>

  <h2>Current Listings by <%= @seller.name %></h2>
  <%= render 'products' %>
</div>